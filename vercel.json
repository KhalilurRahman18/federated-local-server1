{
    "version": 2,
    "builds": [
      {
        "src": "remix/package.json",
        "use": "@vercel/node"
      },
      {
        "src": "api/app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/app.py"
      },
      {
        "src": "/(.*)",
        "dest": "remix/$1"
      }
    ]
  }
  